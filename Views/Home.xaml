<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabBarHighlighterAndBadgePOC.Views.Home"
             Title="Home">
    <Grid RowDefinitions="*,Auto">
        <VerticalStackLayout Grid.Row="0" Spacing="20" VerticalOptions="CenterAndExpand">
            <Label Text="Welcome to .NET MAUI!"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />
            
            <Button Text="Click Me to Increase Badge Count"
                    Clicked="BadgeIncrementCounterBtn_Clicked"
                    HorizontalOptions="Center"/>

            <Button Text="Click me to Decrease Badge Count"
                    Clicked="BadgeDecrementCounterBtn_Clicked"
                    HorizontalOptions="Center"/>

            <Label Text="Current Count: 0"
                   x:Name="CounterLable"
                   HorizontalOptions="Center"/>
            
        </VerticalStackLayout>
        <Grid Grid.Row="1" ColumnDefinitions="0.25*,0.25*,0.25*,0.25*" VerticalOptions="EndAndExpand">
            <Line Grid.Column="0" Stroke="Blue" X2="100" Aspect="Fill" StrokeThickness="3" VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand"/>
        </Grid>
    </Grid>
</ContentPage>