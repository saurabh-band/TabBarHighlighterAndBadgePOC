<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabBarHighlighterAndBadgePOC.Views.Company"
             Title="Company">
    <Grid RowDefinitions="*,Auto">
        <VerticalStackLayout Grid.Row="0">
            <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </VerticalStackLayout>
        <Grid Grid.Row="1" ColumnDefinitions="0.25*,0.25*,0.25*,0.25*" VerticalOptions="EndAndExpand">
            <Line Grid.Column="1" Stroke="Blue" X2="100" Aspect="Fill" StrokeThickness="3" VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand"/>
        </Grid>
    </Grid>

</ContentPage>