<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TabBarHighlighterAndBadgePOC.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TabBarHighlighterAndBadgePOC"
    xmlns:view="clr-namespace:TabBarHighlighterAndBadgePOC.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TabBarHighlighterAndBadgePOC">

    <TabBar>
        <Tab Title="Home"
             Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate view:Home}"/>
        </Tab>
        <Tab Title="Company"
             Icon="baggage.png">
            <ShellContent ContentTemplate="{DataTemplate view:Company}"/>
        </Tab>
        <Tab Title="Notification"
             Icon="bell.png">
            <ShellContent ContentTemplate="{DataTemplate view:Notifications}"/>
        </Tab>
        <Tab Title="My Details"
             Icon="person.png">
            <ShellContent ContentTemplate="{DataTemplate view:MyDetails}"/>
        </Tab>
    </TabBar>
</Shell>
